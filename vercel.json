{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/[...path].js": { "runtime": "nodejs", "maxDuration": 60 }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/[...path].js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
