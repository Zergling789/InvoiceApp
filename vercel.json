{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",

  "functions": {
    "api/[...path].js": {
      "runtime": "nodejs",
      "maxDuration": 60
    }
  },

  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "/api/[...path].js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
